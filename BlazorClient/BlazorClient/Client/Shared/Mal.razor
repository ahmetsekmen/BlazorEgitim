<p>Adı: @mal.Ismi</p>
<p>Uzunlugu: @mal.Uzunlugu</p>
@if (SilGorunur)
{
    <div>
        <button @onclick="Sil" class="btn btn-danger">Sil</button>
    </div>
}

@code{
    [Parameter]
    public Malzeme mal { get; set; }

    [Parameter]
    public bool SilGorunur { get; set; }

    void Sil()
    {
        Console.WriteLine($"{mal.Ismi} isimli mmal siliniyor.");
    }
}